{
  "root": true,
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2016
  },
  "extends": ["airbnb"],
  "globals": {
    "window": true,
    "document": true,
    "fetch": true,
    "btoa": true,
    "atob": true,
    "history": true,
    "location": true,
    "addEventListener": true
  },
  "rules": {
    "max-len": ["error", { "code": 150 }],
    "no-undef": "off",
    "no-restricted-globals": "off",
    "no-unused-vars": "off",
    "no-bitwise": "off",
    "comma-dangle": "off",
    "implicit-arrow-linebreak": "off",
    "function-paren-newline": "off",
    "max-classes-per-file": "off"
  }
}
